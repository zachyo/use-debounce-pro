{
  "name": "use-debounce-pro",
  "version": "1.0.0",
  "description": "A lightweight React hook for debouncing and throttling with advanced features",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "hook",
    "debounce",
    "throttle",
    "performance",
    "typescript"
  ],
  "author": "zarcc",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zachyo/use-debounce-pro"
  },
  "homepage": "https://github.com/zachyo/use-debounce-pro#readme",
  "bugs": {
    "url": "https://github.com/zachyo/use-debounce-pro/issues"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@testing-library/react": "^14.1.2",
    "@types/react": "^18.2.45",
    "@vitest/ui": "^1.1.0",
    "jsdom": "^23.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
